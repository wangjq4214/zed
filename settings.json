// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "wsl_connections": [
    {
      "distro_name": "Ubuntu",
      "user": null,
      "projects": [
        {
          "paths": ["/home/derek/workspace/Bumblebee"]
        }
      ]
    }
  ],
  "project_panel": {
    "hide_gitignore": true,
    "dock": "right"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "relative_line_numbers": true,
  "gutter": {
    "line_numbers": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "minimap": {
    "show": "auto"
  },
  "inlay_hints": {
    "enabled": true
  },
  "buffer_font_family": "Maple Mono NF CN",
  "ui_font_family": "Maple Mono NF CN",
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Material Icon Theme"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 20.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  }
}
